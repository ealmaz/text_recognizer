<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/iv_photo"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@color/gray_1_alpha_50"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <com.design.chili.view.camera_overlays.PassportCardOverlay
        android:id="@+id/overlay"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:overlayAlpha="77"
        app:headerText="\n"
        app:title="@string/check_passport"
        app:description="@string/capture_confirmation_text"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:id="@+id/ll_controls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/btn_secondary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/no_reshoot"
            style="@style/Chili.ButtonStyle.NewAdditional"
            android:layout_marginHorizontal="@dimen/padding_16dp"/>

        <Button
            android:id="@+id/btn_primary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/yes_they_visible"
            style="@style/Chili.ButtonStyle.Primary"
            android:layout_margin="@dimen/padding_16dp"/>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>